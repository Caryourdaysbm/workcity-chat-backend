      "post": {
        "summary": "Sign up",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/auth/login": {
      "post": {
        "summary": "Log in",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
